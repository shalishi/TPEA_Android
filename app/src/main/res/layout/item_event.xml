<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/iv_event"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingStart="@dimen/dp15"
        android:maxLines="1"
        android:textSize="@dimen/font_size_smaller"
        android:textStyle="bold"
        tools:text="2019-09-10" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp10">

        <TextView
            android:id="@+id/iv_card"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:gravity="center"
            android:textSize="@dimen/dp30"
         />

        <LinearLayout
            android:id="@+id/iv_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_marginStart="@dimen/dp15"
            android:layout_toEndOf="@+id/iv_card"
            android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="535587"
                    android:id="@+id/tv_remark"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_largest" />
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp11"
                    android:textSize="@dimen/font_size_small"
                    tools:text="9,35" />

        </LinearLayout>
        <View
            style="@style/Line"
            android:layout_below="@+id/iv_info"
            android:layout_marginTop="@dimen/dp10"
           />
    </RelativeLayout>

</LinearLayout>