<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/iv_product"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp2">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:id="@+id/tv_info"
            android:layout_marginStart="@dimen/dp15"
            android:layout_toEndOf="@+id/iv_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_size_smaller"
                android:textStyle="bold"
                tools:text="Chaussures gris toile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="@dimen/font_size_smallest" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp4"
                    android:maxLines="1"

                    android:textSize="@dimen/font_size_smallest"
                    android:textStyle="bold"
                    tools:text="1500" />
            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qty_text"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:textSize="@dimen/font_size_large"
                    tools:text="Qty:" />

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp4"
                    android:maxLines="1"
                    android:layout_toEndOf="@+id/tv_qty_text"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/font_size_large"
                    android:textStyle="bold"
                    tools:text="1500" />
                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp4"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/font_size_large"
                    android:textStyle="bold"
                    android:text="1500" />
            </RelativeLayout>


        </LinearLayout>

        <View style="@style/Line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>